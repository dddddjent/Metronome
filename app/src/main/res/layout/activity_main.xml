<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/bpm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="60"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/blank_text"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/bpm_text"
            android:background="@null"
            android:text="" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/blank_text"
            android:layout_alignParentStart="true"
            android:text="PLAY"
            android:textSize="20sp" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/blank_text"
            android:layout_alignParentEnd="true"
            android:text="STOP"
            android:textSize="20sp" />

        <Button
            android:id="@+id/set_button"
            android:layout_width="-1dp"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/blank_text"
            android:layout_centerHorizontal="true"
            android:text="SET"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/blank_text_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/set_button"
            android:background="@null"
            android:text="" />

        <android.widget.Button
            android:id="@+id/dec_1_button"
            android:layout_width="@dimen/button_radius"
            android:layout_height="@dimen/button_radius"
            android:layout_below="@id/blank_text_1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:background="@drawable/circle_button"
            android:text="-1"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_button_text_size" />

        <android.widget.Button
            android:id="@+id/inc_1_button"
            android:layout_width="@dimen/button_radius"
            android:layout_height="@dimen/button_radius"
            android:layout_below="@id/blank_text_1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:background="@drawable/circle_button"
            android:text="+1"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_button_text_size" />

        <TextView
            android:id="@+id/blank_text_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/inc_1_button"
            android:background="@null"
            android:text="" />

        <android.widget.Button
            android:id="@+id/dec_5_button"
            android:layout_width="@dimen/button_radius"
            android:layout_height="@dimen/button_radius"
            android:layout_below="@id/blank_text_2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:background="@drawable/circle_button"
            android:text="-5"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_button_text_size" />

        <android.widget.Button
            android:id="@+id/inc_5_button"
            android:layout_width="@dimen/button_radius"
            android:layout_height="@dimen/button_radius"
            android:layout_below="@id/blank_text_2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:background="@drawable/circle_button"
            android:text="+5"
            android:textColor="@color/white"
            android:textSize="@dimen/circle_button_text_size" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>